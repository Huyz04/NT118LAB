<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:src="@drawable/abc" />

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singapore"
        android:layout_below="@+id/img"
        android:layout_marginTop="@dimen/margin_basex4"
        android:textSize="@dimen/text_large"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        />

    <TextView
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/tv_user_name"
        android:layout_below="@+id/tv_sign_in"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:hint="Leica M Typ 240"
        android:layout_alignTop="@+id/tv_user_name"
        android:layout_toRightOf="@+id/tv_user_name"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-15dp"
       />

    <TextView
        android:layout_marginTop="@dimen/margin_base"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/tv_password"
        android:layout_below="@+id/et_username"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:password="true"
        android:hint="f/4 16s ISO 200"
        android:layout_alignTop="@+id/tv_password"
        android:layout_toRightOf="@+id/tv_password"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Singapore officially the Republic of Singapore, and often referred to as the Lion City, the Garden City, and the Red Dot, is a global city in Southeast Asia and the world's only island city-state. It lies one degree (137 km) north of the equator, at the southernmost tip of continental Asia and peninsular Malaysia, with Indonesia's Riau Islands to the south. Singapore's territory consists of the diamond-shaped main island and 62 islets."
        android:id="@+id/text"
        android:layout_below="@+id/tv_password"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_base"
        android:text="DISCARD"
        android:id="@+id/btn_sign_in_fb"
        android:layout_marginTop="@dimen/margin_base"
        android:layout_alignBottom="@+id/btn_sign_up"
        android:layout_toLeftOf="@+id/btn_sign_up"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:id="@+id/btn_sign_up"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_margin="16dp"
        />
</RelativeLayout>